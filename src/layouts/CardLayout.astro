---
function buttonClicked() {
    alert('Button clicked!');
}

interface Props {
	card: string;
}

const { card } = Astro.props;

---
<style>
    .card {
        position: relative;
        width: 300px;
        height: 400px;
        background-color: #fff; /* Fondo de la tarjeta blanco */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        text-align: center;
        padding: 20px;
        box-sizing: border-box;
        color: #000;
        transition: transform 0.3s ease; 
    }
    
    .card:hover {
        transform: scale(1.05); 
    }
    
    .icon {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 24px;
        color: #e74c3c;
    }
    
    .icon-circle {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background-color: #3498db;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
        font-size: 20px;
    }
    
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px;
        margin-top: 20px;
    }
    
    .image-container img {
        max-width: 100%;
        max-height: 100%;
        border-radius: 10px;
    }
    
    .text {
        margin: 20px 0;
    }
    
    .button {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        padding: 10px 20px;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    
    .button:hover {
        background-color: #2980b9;
    }
</style>
    

<body>
    <div class="card">
        <div class="icon">
            <i class="fas fa-heart"></i>
        </div>
        <div class="icon-circle">
            <i class="fas fa-star"></i>
        </div>
        <div class="image-container">
            <img src="path/to/your/image.jpg" alt="Imagen de ejemplo">
        </div>
        <div class="text">
            <p>Este es un texto de ejemplo.</p>
        </div>
        <button class="button" onclick="buttonClicked()">Click Me</button>
    </div>
</body>

